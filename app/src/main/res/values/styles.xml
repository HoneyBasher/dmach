<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.AppCompat.NoActionBar.FullScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DMachTheme" parent="Theme.AppCompat.NoActionBar.FullScreen">
        <item name="android:soundEffectsEnabled">false</item>
        <item name="android:windowBackground">@color/colonial</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="colorControlActivated">@color/gamboge</item>
        <item name="colorControlNormal">@color/colonial</item>
    </style>

    <style name="PatchTheme" parent="DMachTheme">
        <item name="android:textColor">@color/dune</item>
        <item name="colorControlActivated">@color/dune</item>
    </style>

    <style name="Control">
        <item name="android:padding">@dimen/margin_large</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/sel_control</item>
    </style>

    <style name="Logo">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_logo</item>
        <item name="android:textColor">@color/dune</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/sel_channel</item>
        <item name="android:textColor">@color/colonial</item>
    </style>

    <style name="Channel">
        <item name="android:background">@drawable/sel_channel</item>
        <item name="android:textColor">@color/colonial</item>
        <item name="android:textSize">@dimen/text_size_channel</item>
    </style>

    <style name="Setting" parent="Channel">
        <item name="android:background">@drawable/sel_setting</item>
    </style>

    <style name="Config">
        <item name="android:textColor">@color/colonial</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/dune</item>
        <item name="android:textColorPrimary">@color/colonial</item>
        <item name="android:textColor">@color/gamboge</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
